@using System.Globalization
@model ICollection<PayslipServiceModel>
@{
    ViewBag.Title = "Payslips";
}

<div id="content" class="pmd-content section-container center">
    <br />
    @if (!Model.Any())
    {
        <div class="text-center align-self-center mt-5">
            <svg version="1.1" id="Layer_1" x="0px" y="0px" width="100px" height="100px" viewBox="-58 -58 140 140" enable-background="new -58 -58 140 140" xml:space="preserve">
            <circle fill="#E7E9EF" cx="12" cy="12" r="70"></circle>
            <g opacity="0.4">
            <g id="XMLID_233_">

            <circle id="XMLID_235_" fill="none" stroke="#3075BA" stroke-width="6" stroke-miterlimit="10" cx="11.998" cy="-3.917" r="20.464"></circle>
                    </g>
            <g id="XMLID_236_">
            <path id="XMLID_237_" fill="none" stroke="#3075BA" stroke-width="6" stroke-miterlimit="10" d="M12,16.55
                            c-17.581,0-31.833,14.249-31.833,31.831h63.667C43.834,30.799,29.58,16.55,12,16.55z"></path>
                    </g>
                </g>
            </svg>
            <h2 class="mt-3 mb-3">You don`t have any accumulated payslips , yet!</h2>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary pmd-ripple-effect pmd-btn-raised mt-3">Back</a>
        </div>
    }
    else
    {
        <div class="container">
            <div class="section">
                <div class="row">
                    <div class="col-md-10 offset-md-1">
                        <div class="page-header text-center">
                            <h2 id="tables">
                                Payslips
                            </h2>
                            <br />
                        </div>
                        <div class="component">
                            <table class="table table-hover">
                                <thead class=" table-active">
                                    <tr>
                                        <th scope="col">Year</th>
                                        <th scope="col">Month</th>
                                        <th scope="col">Total working hours</th>
                                        <th scope="col">Salary before taxes</th>
                                        <th scope="col">Taxes</th>
                                        <th scope="col">Salary</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payslip in Model)
                                    {
                                        <tr class="table-light">
                                            <td>@payslip.Year</td>
                                            <td>@payslip.Month.ToString() </td>
                                            <td>@payslip.WorkingHoursPerMonth</td>
                                            <td>@payslip.BeforeTaxSalary</td>
                                            <td>@payslip.Taxes</td>
                                            <td>@payslip.AfterTaxSalary</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <br />
                        <a asp-controller="Home" asp-action="Index" type="button" class="btn btn-outline-info btn-sm float-sm-right">Back</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>